    <!-- html2canvas for PNG export -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <script>
      const target = document.getElementById('flow-area');
      document.getElementById('btn-download').addEventListener('click', () => {
        // temporarily increase scale to make PNG sharp
        const prevTransform = target.style.transform;
        html2canvas(target, {
          scale: 2,
          useCORS: true,
          backgroundColor: null,
          allowTaint: true
        }).then(canvas => {
          const link = document.createElement('a');
          link.download = 'diagram_fenomena_umkm_bhayangkari.png';
          link.href = canvas.toDataURL('image/png');
          link.click();
        }).catch(err => {
          alert('Gagal mengekspor. Coba ulang atau buka di browser lain.');
          console.error(err);
        });
      });
    </script>
